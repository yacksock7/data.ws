<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="choi.toi.data.ws.repository.mapper.TemplateMapper">

    <resultMap id="TemplateResultMap" type="Template">
        <id     property="id"                   column="id" />
        <result property="userId"               column="user_id" />
        <result property="type"                 column="type" />
        <result property="name"                 column="name" />
        <result property="createdDatetime"      column="created_datetime" />
        <result property="updatedDatetime"      column="updated_datetime" />
    </resultMap>

    <resultMap id="TemplateTableTransferResultMap" type="TemplateTableTransfer">
        <id     property="id"                   column="id" />
        <result property="userId"               column="user_id" />
        <result property="userNickname"             column="user_nickname" />
        <result property="type"                 column="type" />
        <result property="name"                 column="name" />
        <result property="createdDatetime"      column="created_datetime" />
        <result property="updatedDatetime"      column="updated_datetime" />

        <collection property="templateStepTypes" column="templateId=id" select="selectStepTypesByTemplateId"/>
    </resultMap>
    <resultMap id="TemplateTransferResultMap" type="TemplateTransfer">
        <id     property="id"                   column="id" />
        <result property="userId"               column="user_id" />
        <result property="type"                 column="type" />
        <result property="name"                 column="name" />
        <result property="createdDatetime"      column="created_datetime" />
        <result property="updatedDatetime"      column="updated_datetime" />

        <collection property="steps" column="templateId=id" select="selectStepsByTemplateId"/>
    </resultMap>

    <insert id="insertTemplate" parameterType="Template" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        INSERT INTO templates (
            user_id,
            type,
            name
        ) VALUES (
            #{userId},
            #{type},
            #{name}
        )
    </insert>

    <select id="selectTemplateById" parameterType="Long" resultMap="TemplateResultMap">
        SELECT
            id,
            user_id,
            type,
            name,
            created_datetime,
            updated_datetime
        FROM templates
        WHERE id = #{templateId}
    </select>

    <select id="selectTemplateTransfer" parameterType="Long" resultMap="TemplateTransferResultMap">
        SELECT
            id,
            user_id,
            type,
            name,
            created_datetime,
            updated_datetime
        FROM templates
        WHERE id = #{templateId}
    </select>

    <select id="selectTemplateByUserId" parameterType="Long" resultMap="TemplateResultMap">
        SELECT
            id,
            user_id,
            type,
            name,
            created_datetime,
            updated_datetime
        FROM templates
        WHERE user_id = #{userId}
    </select>
    <select id="selectTemplateByTemplateType" parameterType="TemplateType" resultMap="TemplateResultMap">
        SELECT
            id,
            user_id,
            type,
            name,
            created_datetime,
            updated_datetime
        FROM templates
        WHERE type = #{type}
    </select>

    <select id="selectTableTransfers" parameterType="Long" resultMap="TemplateTableTransferResultMap">
        SELECT
            t.id,
            t.user_id,
            u.nickname AS user_nickname,
            t.type,
            t.name,
            t.created_datetime,
            t.updated_datetime
        FROM templates t
        INNER JOIN users u ON t.user_id = u.id
        WHERE t.user_id = #{userId}
        ORDER BY updated_datetime DESC
    </select>

    <select id="selectStepTypesByTemplateId" parameterType="Map" resultType="TemplateStepType">
        SELECT
            type
        FROM template_steps
        WHERE template_id=#{templateId}
        ORDER BY template_step_num ASC
    </select>
    <select id="selectStepsByTemplateId" parameterType="Map" resultType="TemplateStep">
        SELECT
            template_id AS templateId,
            template_step_num AS templateStepNum,
            type,
            name,
            options,
            input_type AS inputType,
            result_type AS resultType,
            is_reject_point AS isRejectPoint,
            created_datetime AS createdDatetime,
            updated_datetime AS updatedDatetime
        FROM template_steps
        WHERE template_id=#{templateId}
        ORDER BY template_step_num ASC
    </select>

    <update id="updateTemplate" parameterType="Template">
        UPDATE templates
        SET name = #{name},
            updated_datetime = #{updatedDatetime}
        WHERE id = #{id}
    </update>

    <delete id="deleteTemplate" parameterType="Long">
        DELETE FROM templates WHERE id = #{templateId}
    </delete>
</mapper>
